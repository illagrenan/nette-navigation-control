   *
   * @param string              $controlName    Název Controlu pro CSS
   * @param NavigationNode[]    $items          Pole Nodes 
*}

<ul class="nav-control-breadcrumb breadcrumb {$controlName}">
	{foreach $items as $item}
		{if $iterator->isLast()}
			<li class="active">{$item->getLabel()}</li>
		{else}
			<li>
                            <a href="{$item->url}">{$item->getLabel()}</a>
                            <span class="divider">/</span>
                        </li>
		{/if}
	{/foreach}
</ul>